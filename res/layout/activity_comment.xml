<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    
    <ListView android:id="@+id/comment_ListView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:fadingEdge="none"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1px"
        android:cacheColorHint="@null"
        android:scrollbars="none"
        android:layout_marginLeft="15dip"
        android:layout_weight="1"
    	android:layout_marginRight="15dip"/>
    
		<LinearLayout android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:layout_gravity="bottom"
		        android:orientation="horizontal"
		        android:background="@drawable/article_topbar">
		        <LinearLayout android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:gravity="center"
		            android:layout_marginLeft="10dip"
		            android:layout_marginRight="10dip">
			        <ImageButton android:id="@+id/returnBtn"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/selector_back_button"/>
			        <EditText android:id="@+id/comment_EditText"
			            android:layout_width="0dip"
			            android:layout_height="wrap_content"
			            android:background="@drawable/bg_edittext"
			            android:layout_weight="1"
			            android:layout_marginLeft="10dip"
			            android:focusable="false"
			            android:hint="我来说两句..."/>
	        </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
</FrameLayout>
